@model ViewFavoriteMealViewModel
@{
    ViewData["Title"] = "ViewFavoriteMeal";
}

<div class="container">

    <h3>@Model.Title</h3>

    <div class="recipe-ingredients">
        <div class="col-auto">
            <h4 class="ingredients-header">Ingredients</h4>
            @*<ul style="list-style: none; margin:0; padding:0">*@
            <ul class="text-left" style="list-style: none">
                @foreach (var ingredient in Model.ExtendedIngredients)
                {
                    <li>@ingredient.Amount @ingredient.Unit @ingredient.OriginalName</li>
                }
            </ul>
            <div class="recipe-img">
                <figure class="figure">
                    <img src="@Model.Image" class="figure-img img-fluid rounded">
                    <figcaption class="figure-caption"></figcaption>
                </figure>
            </div>
            <ul class="text-left" style="list-style: none">
                <li>Servings: @Model.Servings</li>
                <li>HealthScore: @Model.HealthScore</li>
            </ul>
        </div>
        <div class="recipe-instructions offset-1">
            <h4>Instructions</h4>
            <p>@Model.Instructions</p>
        </div>
        <label>Additional Comments:</label>
        <p>@Model.AdditionalComments</p>
    </div>

    <a class="btn btn-outline-secondary" asp-controller="User" asp-action="UpdateFavoriteMeal" asp-route-id="@Model.Id">Add Additional Comments</a>
    <a class="btn btn-outline-secondary" asp-controller="User" asp-action="DeleteFavoriteMeal" asp-route-id="@Model.Id">Delete from Favorites</a>

</div>
